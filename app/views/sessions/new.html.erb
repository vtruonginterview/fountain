<h1>Login</h1>
<% if flash[:notice] %>
  <div class="notice"><%= flash[:notice] %></div>
<% end %>

<%= form_tag '/login', method: :post do %>
 <div>
  <%= label_tag :email %>
  <%= text_field_tag :email%>
 </div>
 <div>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
 </div>
  <%= submit_tag 'Submit' %>
<%end%>
